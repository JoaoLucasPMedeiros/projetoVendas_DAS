<main>





<form action="/users" method="GET">
  <input type="text" name="nome" id="nome" placeholder="Buscar Registros">
  <button type="submit">Buscar</button>
</form> 



    

     {{#each PGTO}}
    <li>
        <h2 class="client">Cliente: {{dataValues.nome}}</h2>
        <p>Valor: R$ {{dataValues.valor}}</p>
        <p>data: {{#FormatDate dataValues.createdAt}}{{/FormatDate}}</p>
        <p>Forma de PGTO: {{dataValues.Fpgto}}</p>
        <p>Descrição do serviço: {{dataValues.servico}}</p>
        <a href="/del-pagamento/{{dataValues.id}}"><button id="dell">Apagar</button></a>
    </li>
    {{/each}}
</ul>
</main>

